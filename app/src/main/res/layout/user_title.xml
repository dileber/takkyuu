<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/back_temp"
    android:layout_height="@dimen/user_title_height">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="职业头衔:菜鸟  排名:200"
        android:id="@+id/user_option"
        android:textSize="@dimen/user_text_size"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="#6f000000"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/user_image_size"
        android:layout_height="@dimen/user_image_size"
        android:id="@+id/user_title_image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/head_icon_5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="孔文革"
        android:background="#6f000000"
        android:textColor="@color/white"
        android:id="@+id/user_title_name"
        android:layout_below="@+id/user_title_image"
        android:layout_centerHorizontal="true" />
</RelativeLayout>